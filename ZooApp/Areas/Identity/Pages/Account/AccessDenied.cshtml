@page
@model Areas_Identity_Pages_Account_AccessDenied
@{
    ViewData["Title"] = "Access Denied";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .container {
            max-width: 600px;
            margin: auto;
            text-align: center;
        }

        .error-title {
            color: palevioletred;
            margin-bottom: 20px;
        }

        .error-message {
            color: #6c757d;
            margin-bottom: 20px;
        }

        .home-link {
            color: #007bff;
            text-decoration: none;
        }

            .home-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1 class="error-title">@ViewData["Title"]</h1>
            <p class="error-message">You do not have access to this resource.</p>
            <a href="/" class="home-link">Back to Home Page</a>
        </header>
    </div>
</body>
</html>
