@model IEnumerable<ZooApp.Models.AnimalEmployee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Animal.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AnimalEmployeeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AnimalEmployeeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AnimalEmployeeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
