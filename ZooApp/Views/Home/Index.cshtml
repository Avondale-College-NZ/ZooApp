@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"> <!-- all stylesheets linked at top -->
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">

<style>
    body {
        background-color: #f0f0f0;
        color: #333;
        font-family: Arial, sans-serif;
    }

   

    .card {
        transition: transform 0.2s;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        border: none;
        border-radius: 8px;
        overflow: hidden;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0 20px rgba(0,0,0,0.2);
    }

    .card-img-top {
        width: 100%;
        height: auto;
        max-height: 250px;
        object-fit: cover;
    }

    .card-body {
        padding: 1.25rem;
    }

    .btn-primary {
        background-color: #005157;
        border-color: #005157;
    }

    .btn-primary:hover {
        background-color: #003a3f;
        border-color: #003a3f;
    }

    .nav-link {
        display: block;
        text-decoration: none;
    }

    .nav-link:hover {
        text-decoration: none;
    }

    .header {
        animation: fadeFromBlack 2s forwards;
    }

   
</style>
<!--Carousel with images in a slide show with button to navigate previous and next.-->
<div id="carouselExampleCaptions" class="carousel slide rounded-carousel" style="max-width: 1000px; margin: auto;">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Images/Home (1).jpg" class="d-block w-100 rounded-carousel-image" alt="First slide" style="border-radius: 15px;"> <!-- each of these div elements hold different carousel items with their respective images.-->
            <div class="carousel-caption d-none d-md-block">
                <h1>Welcome to <strong>Jetti's Zoo!</strong><br />Where dreams come true</h1>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Images/Home (2).jpg" class="d-block w-100 rounded-carousel-image" alt="Second slide" style="border-radius: 15px;" />
            <div class="carousel-caption d-none d-md-block">
                <h1>We have<br /><strong> Exotic Animals!</strong></h1>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Images/Home (3).jpg" class="d-block w-100 rounded-carousel-image" alt="Third slide" style="border-radius: 15px;">
            <div class="carousel-caption d-none d-md-block">
                <h1><strong>Loving</strong> Staff!</h1>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Images/Home (4).jpg" class="d-block w-100 rounded-carousel-image" alt="Fourth slide" style="border-radius: 15px;">
            <div class="carousel-caption d-none d-md-block">
                <h1>And<br />Great Events for <strong>YOU</strong> to Explore!</h1>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>



<br/>
<div class="container">
    <header class="text-center mb-4">
        <h2>Explore Our Zoo!</h2>
        <p class="lead">Navigate through our site to discover the wonders of Jetti's Zoo. From our diverse wildlife to the dedicated team, we've got everything for an unforgettable experience.</p>
    </header>

    <!-- All card with their buttons and some text explain the purpose of the page.-->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card border-0">
                <a class="nav-link text-dark" href="@Url.Action("Index", "Animals")">
                    <img src="~/images/animal.jpg" alt="Animals" class="card-img-top">
                </a>
                <div class="card-body">
                    <h2 class="card-title">Animals</h2>
                    <p class="card-text">Explore the diverse wildlife in our zoo. From Lions, Crocodiles, and even Penguins, we offer a wide variety of animals you can meet.</p>
                    <a href="@Url.Action("Index", "Animals")" class="btn btn-primary">Check them Out?</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0">
                <a class="nav-link text-dark" href="@Url.Action("Index", "Employees")">
                    <img src="~/images/employees.jpg" alt="Employees" class="card-img-top">
                </a>
                <div class="card-body">
                    <h2 class="card-title">Employees</h2>
                    <p class="card-text">Don't forget to meet the hard-working team behind the scenes who take care of the Zoo!</p>
                    <a href="@Url.Action("Index", "Employees")" class="btn btn-primary">Meet Our Team!</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card border-0">
                <a class="nav-link text-dark" href="@Url.Action("Index", "Tickets")">
                    <img src="~/images/tickets.jpg" alt="Tickets" class="card-img-top">
                </a>
                <div class="card-body">
                    <h2 class="card-title">Tickets</h2>
                    <p class="card-text">Book your tickets for family and friends and enjoy your visit!</p>
                    <a href="@Url.Action("Index", "Tickets")" class="btn btn-primary">Book Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0">
                <a class="nav-link text-dark" href="@Url.Action("Index", "Visitors")">
                    <img src="~/images/visitors.jpg" alt="Visitors" class="card-img-top">
                </a>
                <div class="card-body">
                    <h2 class="card-title">Visitors</h2>
                    <p class="card-text">Register your family and friends as Visitors!</p>
                    <a href="@Url.Action("Index", "Visitors")" class="btn btn-primary">Create your Visitors!</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card border-0">
                <a class="nav-link text-dark" href="@Url.Action("Index", "VisitorLogs")">
                    <img src="~/images/visitorlogs.jpg" alt="Visitor Logs" class="card-img-top">
                </a>
                <div class="card-body">
                    <h2 class="card-title">Visitor Logs</h2>
                    <p class="card-text">See what others have to say about our Zoo, or express your voice!</p>
                    <a href="@Url.Action("Index", "VisitorLogs")" class="btn btn-primary">View Comments</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0">
                <a class="nav-link text-dark" href="@Url.Action("About", "Home")">
                    <img src="~/images/about.jpg" alt="About Jetti's Zoo" class="card-img-top">
                </a>
                <div class="card-body">
                    <h2 class="card-title">About Jetti's Zoo</h2>
                    <p class="card-text">Discover the history and mission of Jetti's Zoo. Learn about our conservation efforts and educational programs.</p>
                    <a href="@Url.Action("About", "Home")" class="btn btn-primary">Learn More</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card border-0">
                <a class="nav-link text-dark" href="@Url.Action("Index", "Enclosures")">
                    <img src="~/images/enclosures.jpg" alt="Enclosures" class="card-img-top">
                </a>
                <div class="card-body">
                    <h2 class="card-title">Enclosures</h2>
                    <p class="card-text">Discover the different enclosures that house our wonderful animals!</p>
                    <a href="@Url.Action("Index", "Enclosures")" class="btn btn-primary">View Enclosures</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0">
                <a class="nav-link text-dark" href="@Url.Action("Index", "Events")">
                    <img src="~/images/events.png" alt="Events" class="card-img-top">
                </a>
                <div class="card-body">
                    <h2 class="card-title">Events</h2>
                    <p class="card-text">Stay updated on our exciting events and activities!</p>
                    <a href="@Url.Action("Index", "Events")" class="btn btn-primary">View Events</a>
                </div>
            </div>
        </div>
    </div>
</div>