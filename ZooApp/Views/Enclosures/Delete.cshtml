@model ZooApp.Models.Enclosure

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Enclosure</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Habitat)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Habitat)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
    </dl>

    <form asp-action="Delete" onsubmit="return confirmDelete()"> <!--The onsubmit attribute makes sure that when the submit button is clicked a special action occurs. In this case, the confirmDelete() method will activate. The method is explained clearly below. -->
        <input type="hidden" asp-for="EnclosureId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>

    <!--This piece of javascript ensure that a popup is displayed prompting the user to either accept the changes that the delete
        is about to make or reject them.
    -->
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this enclosure and all related animals?");
        }
    </script>

</div>
