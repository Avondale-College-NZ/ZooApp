@model ZooApp.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
         @if (User.IsInRole("Admin") || User.IsInRole("Employee")) // Makes sure only Admins and employees can view this page.
                    {
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
                    }
                     @if (User.IsInRole("Admin")) // makes sure only Admins may view this page.
                    {
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salary)
        </dd>
                    }
                     @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                    {
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HireDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HireDate)
        </dd>
                    }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enclosure)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enclosure.Habitat)
        </dd>
    </dl>
</div>

<h4>Animals Looked After</h4>
<hr />
<table class="table table-striped table-bordered table-hover">
    <thead style="background:#3e2723">
        <tr>
            <th>Name</th>
            <th>Species</th>
            <th>Age</th>
            <th>Diet</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.AnimalEmployees != null && Model.AnimalEmployees.Any())
        {
            foreach (var animalEmployee in Model.AnimalEmployees)
            {
                var animal = animalEmployee.Animal;
                <tr>
                    <td>@Html.DisplayFor(_ => animal.Name)</td>
                    <td>@Html.DisplayFor(_ => animal.Species)</td>
                    <td>@Html.DisplayFor(_ => animal.Age)</td>
                    <td>@Html.DisplayFor(_ => animal.Diet)</td>
                    <td><img src="~/images/@animal.ImageFileName" alt="@animal.Name" class="img-thumbnail" style="max-width: 100px; height: 100px; border-radius: 10px;" /></td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No animals assigned to this employee.</td>
            </tr>
        }
    </tbody>
</table>

<style>
    /* Custom Styles */
    body {
        color: black;
        background-color: #f8f9fa;
    }


    .table {
        margin-top: 20px;
    }

    th {
        background-color: #007bff;
        color: #fff;
    }

    tr {
        text-decoration-color: black;
    }


</style>

<div>
    
    <a asp-action="Index">Back to List</a>
</div>
