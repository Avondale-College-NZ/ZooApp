@model IEnumerable<ZooApp.Models.Visitor>
@{
    ViewData["Title"] = "Visitors";
}
<h2>Visitors</h2>
<form asp-action="Index">
    <div class="form-group">
        <input type="text" name="searchString" value="@ViewData["VisitorNameFilter"]" class="form-control" placeholder="Search by name or email">
        <input type="submit" value="Search" class="btn btn-default">
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td>@item.Address</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.VisitorId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.VisitorId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.VisitorId">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Create New</a>
