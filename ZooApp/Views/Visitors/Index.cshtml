@model IEnumerable<ZooApp.Models.Visitor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" class="form-control" name="searchString" placeholder="Search by name or email" aria-label="Search" aria-describedby="searchButton" value="@ViewData["VisitorNameFilter"]">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit" id="searchButton">Search</button>
        </div>
    </div>
</form>

<a asp-action="Index">Back to original List</a>
<hr />
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VisitorId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VisitorId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VisitorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
